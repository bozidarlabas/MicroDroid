<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include
        android:id="@+id/app_bar"
        layout="@layout/micro_app_bar" />

    <LinearLayout
        android:id="@+id/layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_bar"
        android:layout_marginEnd="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginStart="15dp">

        <RelativeLayout
            android:id="@+id/mylayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.rey.material.widget.Button
            android:id="@+id/btnDrawerActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:elevation="1dp"
            android:text="Go to DrawerActivity"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Button"
            android:textColor="#FFFFFFFF"
            app:delayClick="true"
            app:ripple="@style/RaiseColorButtonRippleStyle" />

        <fragment
            android:layout_marginBottom="5dp"
            android:id="@+id/fragment2"
            android:name="com.bozidar.microdroidapp.Fragment.StaticFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/mylayout"
            android:layout_marginTop="10dp"
            tools:layout="@layout/fragment_static" />
    </LinearLayout>





</RelativeLayout>
